print('Digite o número da questão que quer executar:')
questao = int(input())

# 1 Leia um número inteiro e imprima
if questao == 1:
    print('Digite um número inteiro')
    numero = int(input())
    print(type(numero))

# 2 Leia um número real e imprima
elif questao == 2:
    print("Digite um número real")
    numero2 = input()
    print(type(float(numero2)))

# 3 Peça ao usuário para digitar três valores inteiros e imprima a soma deles.
elif questao == 3:
    print("Digite três números inteiros")
    numero3 = int(input())
    numero4 = int(input())
    numero5 = int(input())
    total = numero3 + numero4 + numero5
    print(f'O resultado é {total}')

# 4 Leia um número real e imprima o resultado do quadrado desse número.
elif questao == 4:
    print("Digite um número real")
    numero = float(input())
    print((numero ** 2))

# 5 Leia um número real e imprima a quinta parte desse número.
elif questao == 5:
    print("Digite um número real")
    numero = float(input())
    print((numero / 5))

# 6 Leia uma temperatura em graus Celsius e apresente-a convertida em graus Fahrenheit.
elif questao == 6:
    print("Digite a temperatura em Celsius:")
    celsius = float(input())
    f = float(celsius * (9.0 / 5.0) + 32.0)
    print(f'O valor em Fahrenheit é: {f}')

# 7 Leia uma temperatura em graus Fahrenheit e apresente-a convertida em graus Celsius.
elif questao == 7:
    print("Digite a temperatura em Fahrenheit:")
    f = float(input())
    celsius = float(5.0 * (f - 32.0) / 9.0)
    print(f'O valor em Celsius é: {celsius}')

# 8 Leia uma temperatura em graus Kelvin e apresente-a convertida em graus Celsius.
elif questao == 8:
    print("Digite a temperatura em Kelvin:")
    k = float(input())
    celsius = float(k - 273.15)
    print(f'O valor em Celsius é: {celsius}')

# 9 Leia uma temperatura em graus Celsius e apresente-a convertida em graus Kelvin.
elif questao == 9:
    print("Digite a temperatura em Celsius:")
    celsius = float(input())
    k = float(celsius + 273.15)
    print(f'O valor em Kelvin é: {k}')

# 10 Leia uma velocidade em km/h e apresente-a convertida em m/s
elif questao == 10:
    print("Digite a velocidade em km/h:")
    vkm = float(input())
    vms = float(vkm / 3.6)
    print(f'O valor em m/s é: {vms}')

# 11 Leia uma velocidade em m/s e apresente-a convertida em km/h.
elif questao == 11:
    print("Digite a velocidade em m/s:")
    vms = float(input())
    vkm = float(vms * 3.6)
    print(f'O valor em km/h é: {vkm}')

# 12 Leia uma distância em milhas e apresente-a convertida em km/h.
elif questao == 12:
    print("Digite a distância em milha:")
    milha = float(input())
    km = float(1.61 * milha)
    print(f'O valor em km é: {km}')

# 13 Leia uma distância em km e apresente-a convertida em millhas.
elif questao == 13:
    print("Digite a distância em km:")
    km = float(input())
    milha = float(km / 1.61)
    print(f'O valor em milha é: {milha}')

# 14 Leia um ângulo em graus e apresente-o convertido em radianos.
elif questao == 14:
    import math
    print("Digite o valor do ângulo em graus:")
    a = float(input())
    rad = float(a * math.pi / 180)
    print(f'O valor em radianos é: {rad}')

# 15 Leia um ângulo em radianos e apresente-o convertido em graus.
elif questao == 15:
    import math
    print("Digite o valor do ângulo em radianos:")
    rad = float(input())
    a = float(rad * 180 / math.pi)
    print(f'O valor em graus é: {a}')

# 16 Leia um valor de comprimento em polegadas e apresent-o em cm.
elif questao == 16:
    print("Digite o valor do comprimento em polegadas:")
    p = float(input())
    cm = float(p * 2.54)
    print(f'O valor em cm é: {cm}')

# 17 Leia um valor de comprimento em cm e apresent-o em polegadas.
elif questao == 17:
    print("Digite o valor do comprimento em cm:")
    cm = float(input())
    p = float(cm / 2.54)
    print(f'O valor em cm é: {p}')

# 18 Leia um valor de volume em metros cúbicos m³ e apresente-o em litros.
elif questao == 18:
    print("Digite o valor do volume em m³:")
    v = float(input())
    l = float(1000 * v)
    print(f'O valor em litros é: {l}')

# 19 Leia um valor de volume em litros e apresente-o em metros cúbicos m³.
elif questao == 19:
    print("Digite o valor do volume em litros:")
    l = float(input())
    v = float(l / 1000)
    print(f'O valor em m³ é: {v}')

# 20 Leia um valor de massa em kg e converta-o para libras.
elif questao == 20:
    print("Digite o valor de massa em kg:")
    m = float(input())
    l = float(m / 0.45)
    print(f'O valor em libras é: {l}')

# 21 Leia um valor de massa em libras e converta-o para kg.
elif questao == 21:
    print("Digite o valor de massa em libras:")
    l = float(input())
    m = float(l * 0.45)
    print(f'O valor em kg é: {m}')

# 22 Leia um valor de comprimento em jardas e apresente-o convertido em metros.
elif questao == 22:
    print("Digite o valor do comprimento em jardas:")
    j = float(input())
    m = float(0.91 * j)
    print(f'O valor do comprimento em metros é : {m}')

# 23 Leia um valor de comprimento em metros e apresente-o convertido em jardas.
elif questao == 23:
    print("Digite o valor do comprimento em metros:")
    m = float(input())
    j = float(m / 0.91)
    print(f'O valor do comprimento em jardas é : {j}')

# 24 Leia um valor de área em metros quadrados m² e apresente-o convertido em acres.
elif questao == 24:
    print("Digite o valor da área em m²:")
    m = float(input())
    acres = float(m * 0.000247)
    print(f'O valor da área em acres é : {acres}')

# 25 Leia um valor de área em acres e apresente-o convertido em metros quadrados m².
