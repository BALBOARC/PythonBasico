# 27 Leia um valor de área em hectares e apresente-o convertido em metros quadrados m².
elif questao == 27:
    print("Digite o valor da área em hectares:")
    h = float(input())
    m = float(h * 1000)
    print(f'O valor da área em m² é : {m}')

# 28 Leia 3 valores e apresente como resultado a soma dos quadrados dos 3 valores lidos.
elif questao == 28:
    print("Digite valor 1")
    v1 = float(input())
    print("Digite valor 2")
    v2 = float(input())
    print("Digite valor 3")
    v3 = float(input())
    r = float(v1 ** 2 + v2 ** 2 + v3 ** 2)
    print(f'O resultado é : {r}')

# 29 Leia 4 notas, calcule a média aritmética e imprima o resultado.
elif questao == 29:
    print("Digite valor 1")
    v1 = float(input())
    print("Digite valor 2")
    v2 = float(input())
    print("Digite valor 3")
    v3 = float(input())
    print("Digite valor 4")
    v4 = float(input())
    r = float((v1 + v2 + v3 + v4) / 4)
    print(f'O resultado é : {r}')

# 30 Leia um valor em Real e a cotação do dólar, em seguida imprima o valor em dólares.
elif questao == 30:
    print("Digite valor em reais")
    real = float(input())
    print("Digite valor da cotação")
    cotacao = float(input())
    dolar = float(real / cotacao)
    print(f'O resultado em Dólar: {dolar}')

# 31 Leia um número inteiro e imprima o seu antecessor e o seu sucessor.
elif questao == 31:
    print("Digite um número inteiro:")
    num = int(input())
    ant = int(num - 1)
    suc = int(num + 1)
    print(f'O antecessor é: {ant} e o sucessor é: {suc}')

# 32 Leia um número inteiro e imprima a soma do sucessor de seu triplo com o antecessor do seu dobro.
elif questao == 32:
    print("Digite um número inteiro:")
    num = int(input())
    ant = int(num * 2 - 1)
    suc = int(num * 3 + 1)
    r = int(ant + suc)
    print(f'O resultado é: {suc} + {ant} = {r}')

# 33 Leia o tamanho do lado de um quadrado e imprima como resultado a sua área.
elif questao == 33:
    print("Digite o valor do lado do quadrado:")
    num = float(input())
    area = float(num ** 2)
    print(f'O resultado é: {area}')

# 34 Leia o valor do raio de um círculo e calcule e imprima a área do círculo correspondente.
elif questao == 34:
    import math
    print("Digite o valor do raio do círculo:")
    num = float(input())
    area = float(math.pi * (num ** 2))
    print(f'O resultado é: {area}')

# 35 Leia a e b e calcule a hipotenusa.
elif questao == 35:
    import math
    print("Digite o valor de a:")
    a = float(input())
    print("Digite o valor de b:")
    b = float(input())
    hipotenusa = float(math.sqrt(a ** 2 + b ** 2))
    print(f'O resultado é: {hipotenusa}')

# 36 Leia a altura e o raio de um cilindro circular e imprima o volume do cilindro.
elif questao == 36:
    import math
    print("Digite o valor da altura:")
    a = float(input())
    print("Digite o valor do raio:")
    r = float(input())
    v = float(math.pi * r ** 2 * a)
    print(f'O volume é: {v}')

# 37 Leia o valor de um produto e imprima o valor com desconto de 12%.
elif questao == 37:
    print("Digite o valor do produto:")
    p = float(input())
    v = float(p - p * 0.12)
    print(f'O valor com 12% de desconto é: {v}')

# 38 Leia o salário de um funcionário e aumente 25%.
elif questao == 38:
    print("Digite o valor do salário:")
    s = float(input())
    v = float(s * 1.25)
    print(f'O valor com 25% de acréscimo é: {v}')

# 39 Quantia de R$ 780.000 pra ganhadores de concurso.
elif questao == 39:
    from decimal import Decimal
    print("Valor total do prêmio: R$ 780.000")
    premio = 780_000
    primeiro = Decimal(premio * 0.46)
    segundo = Decimal(premio * 0.32)
    terceiro = Decimal(premio - (primeiro + segundo))
    print(f'O valor do primeiro: {primeiro} segundo: {segundo} e terceiro: {terceiro}')

# 40 Encanador a R$ 30,00 o dia número de dias trabalhados e desconto de 8% IR.
elif questao == 40:
    print("Digite a quantidade de dias trabalhados:")
    dias = int(input())
    r = round(dias * 30 - (dias * 30 * 0.08), 2)
    print(f'A Quantia líquida com 8% de Desconto é: {r}')

# 41 Leia o valor da hora de trabalho e número de horas trabalhadas no mês adicione 10%.
elif questao == 41:
    print("Digite o valor da hora:")
    hora = float(input())
    print("Digite o número de horas trabalhadas no mês")
    mes = float(input())
    r = round(hora * mes * 1.10, 2)
    print(f'O valor total é: R$ {r}')

# 42 Leia salario base, gratificação de 5% e imposto de 7% sobre o sário base.
elif questao == 42:
    print("Digite o salário base:")
    salario = float(input())
    r = round(salario + (salario * 0.05) - (salario * 0.07), 2)
    print(f'O valor total é: R$ {r}')

# 43 Programa de ajuda para vendedores.
elif questao == 43:
    print("Digite o valor:")
    valor = float(input())
    total10 = round(valor - (valor * 0.10), 2)
    valorparcela = round(valor / 3, 2)
    comissaovista = round(total10 * 0.05, 2)
    comissaoparcelada = round(valor * 0.05, 2)
    print(f'O valor total com desconto é: R$ {total10}')
    print(f'O valor da parcela em 3x é: R$ {valorparcela}')
    print(f'O valor da comissão a vista é: R$ {comissaovista}')
    print(f'O valor da comissão parcelada é: R$ {comissaoparcelada}')

# 44 Leia altura do degrau da escada e altura escolhida, calcular quantidade de degraus.
elif questao == 44:
    print("Digite o valor da altura total:")
    altura = float(input())
    print("Digite a altura do degrau:")
    degral = float(input())
    quant = round(altura / degral, 3)
    print(f'A quantidade de degraus necessária é: {quant}')

# 45 Converter uma letra maiúscula em minúscula.
elif questao == 45:
    print("Digite uma letra qualquer:")
    l = str(input())
    print(f"A forma maíscula dessa letra é: {l.upper()}")

# 46 Leia um número inteiro positivo de 3 dígitos (100 a 999), inverta.
elif questao == 46:
    print("Digite um número de 3 dígitos:")
    num = str(input())
    r = int(num[::-1])
    print(f"A forma invertida desse número é: {r}")
    print(type(r))

# 47 Leia um número inteiro positivo de 4 dígitos (1000 a 9999), imprima 1 digito por linha.
elif questao == 47:
    print("Digite um número inteiro de 4 dígitos:")
    num = str(input())
    print(f"A primeira é: {num[ 0 : 1 ]}")
    print(f"A segunda é: {num[ 1 : 2 ]}")
    print(f"A terceira é: {num[ 2 : 3 ]}")
    print(f"A quarta é: {num[ 3 : 4 ]}")
    print(type(num))
    
else:
    print('Digite uma questão válida!')
